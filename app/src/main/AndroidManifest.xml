<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threemonkeys.alias">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LastWord"
            android:screenOrientation="portrait"/>
        <activity android:name=".RobberyRound"
            android:screenOrientation="portrait"/>
        <activity android:name=".Statistics"
            android:screenOrientation="portrait"/>
        <activity android:name=".WinPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".Rules"
            android:screenOrientation="portrait"/>
        <activity android:name=".Round"
            android:screenOrientation="portrait"/>
        <activity android:name=".Game"
            android:screenOrientation="portrait"/>
        <activity android:name=".Levels"
            android:screenOrientation="portrait"/>
        <activity android:name=".Teams"
            android:screenOrientation="portrait"/>
        <activity android:name=".GameSettings"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>